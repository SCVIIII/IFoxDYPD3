<Window
    x:Class="IFoxTestCode.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:IFoxTestCode"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IFoxTestCode"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:IFoxTestCode"
    Title="可变高度单元格布局"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <conv:RowSpanToBrushConverter x:Key="RowSpanToBrushConverter" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--  重复8列  -->
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <!--  标题行  -->
                <!--  9行内容  -->
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  列标题  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列1" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列2" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列3" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列4" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="4"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列5" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="5"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列6" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="6"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列7" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="7"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="列8" />

            <!--  动态生成单元格内容  -->
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="0"
                ItemsSource="{Binding Columns[0].Cells}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="1"
                            Background="{Binding RowSpan, Converter={local:RowSpanToBrushConverter}}"
                            BorderBrush="Gray"
                            BorderThickness="1">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding Content}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Grid.RowSpan" Value="{Binding RowSpan}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>

            <!--  重复其他列...  -->
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="1"
                ItemsSource="{Binding Columns[1].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="2"
                ItemsSource="{Binding Columns[2].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="3"
                ItemsSource="{Binding Columns[3].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="4"
                ItemsSource="{Binding Columns[4].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="5"
                ItemsSource="{Binding Columns[5].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="6"
                ItemsSource="{Binding Columns[6].Cells}">
                <!--  同上  -->
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.RowSpan="9"
                Grid.Column="7"
                ItemsSource="{Binding Columns[7].Cells}">
                <!--  同上  -->
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</Window>